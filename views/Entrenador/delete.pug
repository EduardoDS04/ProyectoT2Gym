extends ../templates/layout

block content  
    h3 Borrar un entrenador
        div 
            form(method="post") 
                label(for="nombre") Nombre:
                input(type="text", name="nombre", value=`${Entrenador.Nombre}`,disabled)
                br
                label(for="especialidad") Especialidad:
                input(type="text", name="text", value=`${Entrenador.Especialidad}`,disabled)
                br
                label(for="nivel_experiencia") Nivel experiencia:
                input(type="text", name="text", value=`${Entrenador.Nivel_Experiencia}`,disabled)
                br
                input(type="hidden", name="id", value=`${Entrenador.id}`)
                input(type="submit", value="Enviar")

