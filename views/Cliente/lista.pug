extends ../templates/layout

block content
  h3 Listado de Clientes
  div.container
    div.text-right.mt-3
      a.btn.btn-primary(href="/Cliente/add") Añadir un nuevo cliente
    table.table.table-bordered.table-hover
      thead
        tr
          th ID
          th Nombre
          th Correo
          th Fecha Registro
          th Teléfono
          th Acciones
      tbody
        if clientes && clientes.length > 0
          each cliente in clientes
            tr
              td= cliente.id
              td= cliente.Nombre
              td= cliente.Correo
              td= cliente.Fecha_Registro.toLocaleDateString()
              td= cliente.Telefono
              td
                a.btn.btn-warning(href=`/Cliente/edit/${cliente.id}`) Editar
                a.btn.btn-danger(href=`/Cliente/delete/${cliente.id}`) Borrar
        else
          tr
            td(colspan="6") No se encontraron clientes.
