extends ../templates/layout

block content  
    h3 Editar un cliente
            div 
                form(method="post") 
                    label(for="nombre") Nombre:
                    input(type="text", name="nombre", value=`${Cliente.Nombre}`)
                    br
                    label(for="email") Correo:
                    input(type="email", name="email", value=`${Cliente.Correo}`)
                    br
                    label(for="fecha_registro") Fecha Registro:
                    input(type="date", name="date", value=`${Cliente.Fecha_Registro}`)
                    br
                    label(for="telefono") Telefono:
                    input(type="number", name="number", value=`${Cliente.Telefono}`)
                    br
                    input(type="hidden", name="id", value=`${Cliente.id}`)
                    input(type="submit", value="Enviar")
